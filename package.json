  "dmg": {
   "icon": "build/1024x1024.png"
  },
  "win": {
   "target": {
    "target": "msi",
    "arch": [
     "x64"
    ]
   },
   "icon": "build/icon.ico",
   "certificateFile": "build/CodeSignCert.pfx",
